{{>layout/header}}

<h1>Todo list</h1>

<div>
    <input id="todo-save" />
    <button onclick="saveTodo()">추가하기</button>
</div>

<table>
    <thead>
        <tr>
            <th>번호</th>
            <th>할 일</th>
            <th>상태</th>
            <th>관리</th>
        </tr>
    </thead>
    <tbody>
        {{#todos}}
            <tr>
                <td>{{id}}</td>
                <td>{{content}}</td>
                <td>{{completed_fl}}</td>
                <td>
                    <button onclick="deleteTodo({{id}})">삭제</button>
                    <button onclick="openModal({{id}})">수정</button>
                    <button onclick="completeTodo({{id}})">완료</button>
                </td>
            </tr>
        {{/todos}}
    </tbody>
</table>


<div id="modal" class="hidden">
    <div class="modal_content">
        <input id="todo-update" placeholder="내용을 수정해주세요"/>
        <button type="button" onclick="closeModal()">취소</button>
        <button type="button" onclick="updateTodo()">완료</button>
    </div>
    <input type="hidden" id="todo-id" value="">
</div>

{{>layout/footer}}